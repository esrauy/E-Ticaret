@model IEnumerable<IdentityRole>

<div class="row">
    <div class="col-md-12">
        <h1>Rol Listesi</h1>
        <hr />
        <a href="/admin/role/create" class="btn btn-success btn-sm">Rol Ekle</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width:200px">Id</td>
                    <td>Rol Adı</td>
                    <td style="width:150px"> </td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                            <td>
                                <a href="/admin/role/@role.Id" class="btn btn-success btn-sm mr-2">Güncelle</a>
                                <form action="/admin/deleterole" method="post" style="display:inline">
                                    <input type="hidden" name="Id" value="@role.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm"> Sil</button>
                                </form>
                            </td>
                        </tr>
                    }

                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>Listelenecek rol bulunamadı.</h3>
                    </div>
                }
            </tbody>
        </table>

    </div>
</div>